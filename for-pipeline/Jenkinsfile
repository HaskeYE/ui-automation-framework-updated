pipeline {
        agent any
        tools {
        maven "Maven-1"
        jdk "JAva-1"
        }
        stages {
        stage('Initialize'){
        steps{
        echo "PATH = ${M2_HOME}/bin:${PATH}"
        echo "M2_HOME = /opt/maven"
        }
        }
        stage('Build') {
        steps {
        dir("/Users/ebykov/.jenkins/workspace/Selenium-Job") {
        sh 'mvn -B -DskipTests clean package'
        }
        }
        }
        }
        post {
        always {
        junit(
        allowEmptyResults: true,
        testResults: '*/test-reports/.xml'
        )
        }
        }
        }